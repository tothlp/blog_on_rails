<h2>Bejelentkezés</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :username, 'Felhasználónév' %><br/>
        <%= f.text_field :username, autofocus: true, class: 'form-group' %>
      </div>

      <div class="field">
        <%= f.label :password, 'Jelszó' %><br/>
        <%= f.password_field :password, autocomplete: "off", class: 'form-group' %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Jegyezz meg' %>
          </div>
      <% end -%>
    </div>
    <div class="actions">
      <%= f.submit "Bejelentkezés" %>
    </div>
<% end %>

<%= #render "devise/shared/links" %>
