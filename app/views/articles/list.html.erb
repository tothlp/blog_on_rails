
<h2 class="text-center">Bejegyzések listázása</h2>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <th>Cím</th>
      <th>Hozzáadva</th>
      <th>Módosítva</th>
      <th>Létrehozó</th>
      <th colspan="2"></th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
          <td>
            <%= link_to article.title, article_path(article) %>
          </td>

          <td>
            <%= article.created_at.strftime(Setting.find_by_key('dateformat_long').value) %>
          </td>

          <td> <%= article.updated_at.strftime(Setting.find_by_key('dateformat_long').value) %> </td>
          <td> <%= article.user.username %> </td>
          <td><span class="glyphicon glyphicon-time"></span>
            <%= link_to 'Szerkesztés', edit_article_path(article) %></td>
          <td><%= link_to 'Törlés', article_path(article),
                        method: :delete,
                        data: { confirm: 'Biztos?' } %></td>
        </tr>
    <% end %>
  </table>
</div>
