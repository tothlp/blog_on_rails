<h1>Blog</h1>
<% @articles.each do |article| %>
    <h2>
      <%= link_to article.title, article_path(article) %>
    </h2>
    <h5><span class="glyphicon glyphicon-user"></span> <%= article.user.username %>
      <span class="glyphicon glyphicon-time"></span> <%= article.created_at.strftime(Setting.find_by_key('dateformat_long').value) %>
      <span class="badge"><%= article.comments.count %></span><small> hozzászólás</small></h5>
    <h5><span class="label label-danger">Food</span> <span class="label label-primary">Ipsum</span></h5>
    <%= raw(article.text) %>
    <hr>
<% end %>