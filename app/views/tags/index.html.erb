<h2 class="text-center">Címkék</h2>
<div class="table-responsive">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-link btn-sm" data-toggle="collapse" data-target="#add"><%= fa_stacked_icon "plus inverse", base: "circle", class: "fa-1x" %></button>
  <br>
  <div id="add" class="collapse panel panel-default">
    <div class="panel-body"><%= render 'form' %> </div>
  </div>

  <% if @tags.count >0  %>
      <table class="table table-hover">
        <tr>
          <th colspan="3">Tag</th>
        </tr>
        <% @tags.each do |tag| %>
            <tr>
              <td>
                <%= tag.name %>
              </td>
              <td class="pull-right">
                <%= link_to edit_tag_path(tag) do %>
                    <%= fa_stacked_icon "pencil inverse", base: "circle", class: "fa-1x" %>
                <% end %>
                <%= link_to tag_path(tag), method: :delete, data: {confirm: 'Biztos?'} do %>
                    <%= fa_stacked_icon "trash inverse", base: "circle", class: "fa-1x" %>
                <% end %>
                </td>
            </tr>
        <% end %>

      </table>
  <% else %>
      <% flash[:notice] = "Még nem lett létrehozva egy címke sem." %>
  <% end %>
</div>
