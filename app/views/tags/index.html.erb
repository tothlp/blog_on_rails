<h2 class="text-center">Címkék</h2>
<div class="table-responsive">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="collapse" data-target="#add">Hozzáadás</button>
  <div id="add" class="collapse">
    <%= render 'form' %>
  </div>
  <table class="table table-striped table-hover">
    <tr>
      <th>Tag</th>
      <th colspan="2"></th>
    </tr>
    <% @tags.each do |tag| %>
        <tr>
          <td>
            <%= tag.name %>
          </td>
          <td><button type="button" class="btn btn-info btn-sm" data-toggle="collapse" data-target="#edit">Szerkesztés</button></td>
          <td><%= link_to 'Törlés', tag_path(tag),
                          method: :delete,
                          data: { confirm: 'Biztos?' } %></td>
        </tr>
        <div id="edit" class="collapse">
          <%= render :partial => 'form', :locals => { :tag => tag } %>
        </div>
    <% end %>


  </table>
</div>
