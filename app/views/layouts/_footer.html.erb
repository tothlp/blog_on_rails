<footer class="navbar navbar-default navbar-fixed-bottom footer text-center navbar-inverse">

  <!--Social Linkek-->
  <% social = [:twitter, :github, :instagram, :facebook] %>

  <!--Bejárjuk a tömböt, és a helperek segítségével generálunk ikonos linket. ^^ -->
  <% social.each do |site| %>
      <%= link_to "https://www.#{site}.com/tothlp", :target => "_blank" do %>
          <%= fa_stacked_icon "#{site} inverse", base: "circle", class: "fa-1x" %>
      <% end %>
  <% end %>

  <%= link_to "https://www.linkedin.com/in/tothlp/", :target => "_blank" do %>
      <%= fa_stacked_icon "linkedin inverse", base: "circle", class: "fa-1x" %>
  <% end %>

  <%= link_to "https://open.spotify.com/user/tothl", :target => "_blank" do %>
      <%= fa_stacked_icon "spotify inverse", base: "circle", class: "fa-1x" %>
  <% end %>

  <br/>
  <small>
    <%= Setting.find_by_key('footer_text').value %>
  </small>

</footer>
