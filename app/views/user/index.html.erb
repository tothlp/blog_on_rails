<h2 class="text-center">Felhasználók</h2>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <th>ID</th>
      <th>Felhasználónév</th>
      <th>E-mail</th>
      <th>Admin</th>
      <th>Létrehozva</th>
      <th colspan="2"></th>
    </tr>
    <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= user.username %>
          </td>

          <td>
            <%= user.email %>
          </td>

          <td> <%= user.admin? %> </td>
          <td> <%= user.created_at.strftime("%Y.%m.%d. %H:%m") %></td>
          <td><span class="glyphicon glyphicon-time"></span>
            <%= link_to 'Szerkesztés', edit_user_path(user) %></td>
          <td><%= link_to 'Törlés', user_path(user),
                          method: :delete,
                          data: { confirm: 'Biztos?' } %></td>
        </tr>
    <% end %>
  </table>
</div>
