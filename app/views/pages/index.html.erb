
<h2 class="text-center">Oldalak listázása</h2>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <th>Cím</th>
      <th>Hozzáadva</th>
      <th>Módosítva</th>
      <th>Létrehozó</th>
      <th colspan="2"></th>
    </tr>
    <% @pages.each do |page| %>
        <tr>
          <td>
            <%= link_to page.title, page_path(page) %>
          </td>

          <td>
            <%= page.created_at %>
          </td>

          <td> <%= page.updated_at %> </td>
          <td> tothl </td>
          <td><span class="glyphicon glyphicon-time"></span>
            <%= link_to 'Szerkesztés', edit_page_path(page) %></td>
          <td><%= link_to 'Törlés', page_path(page),
                        method: :delete,
                        data: { confirm: 'Biztos?' } %></td>
        </tr>
    <% end %>
  </table>
</div>
