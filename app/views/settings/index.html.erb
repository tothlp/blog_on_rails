<h2 class="text-center">Beállítások</h2>
<div class="table-responsive">

  <button type="button" class="btn btn-link btn-sm" data-toggle="collapse" data-target="#add"><%= fa_stacked_icon "plus inverse", base: "circle", class: "fa-1x" %></button>
  <br>
  <div id="add" class="collapse panel panel-default">
    <div class="panel-body"><%= render 'form' %> </div>
  </div>

  <% if @settings.count >0  %>
      <table class="table table-hover table-striped">
        <tr>
          <th>Kulcs</th>
          <th>Érték</th>
          <th colspan="3">Leírás</th>
        </tr>
        <% @settings.each do |setting| %>
            <tr>

              <td>
                <%= setting.key %>
              </td>

              <td>
                <%= setting.value %>
              </td>

              <td>
                <%= setting.description %>
              </td>

              <td class="pull-right">
                <%= link_to edit_setting_path(setting) do %>
                    <%= fa_stacked_icon "pencil inverse", base: "circle", class: "fa-1x" %>
                <% end %>
                <%= link_to setting_path(setting), method: :delete, data: {confirm: 'Biztos?'} do %>
                    <%= fa_stacked_icon "trash inverse", base: "circle", class: "fa-1x" %>
                <% end %>
              </td>
            </tr>
        <% end %>

      </table>
  <% else %>
      <% flash[:notice] = "Még nem lett létrehozva egy beállítás sem." %>
  <% end %>
</div>
